<androidx.cardview.widget.CardView
    android:id="@+id/cardOuter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="80dp"
    android:paddingEnd="80dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/linearLayoutX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="50dp"
                app:cardCornerRadius="30dp">
                <ImageView

                    android:id="@+id/image"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:cropToPadding="true"
                    android:src="@drawable/common_google_signin_btn_text_dark"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Tesla launches full self driving subscriptions"
                android:maxHeight="50dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:text="www.google.com"
                />
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp"
                android:singleLine="false"
                android:text="Description is "/>
        </LinearLayout>
</androidx.cardview.widget.CardView>